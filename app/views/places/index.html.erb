<%= image_tag 'slider.jpg', class: 'img-responsive' %>
<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
  
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag 'CI_food.jpg' %>
      <div class="carousel-caption">
        Places from all over!
      </div>
    </div>
    <div class="item">
    <%= image_tag 'thumb_600.jpg' %>
    <div class="carousel-caption">
      Looking for chicken?
    </div>
  </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>




<% @places.each do |place| %>
  <div class="booyah-box col-xs-10 col-xs-offset-1">
    <h1><%= link_to place.name, place_path(place) %></h1><br />
    <i><%= place.address %></i><br /><br />
    <p><%= place.description %></p><br />
    <%= will_paginate @places %>
    <% if place.user.present? %>
      <small><%= place.user.email %></small>
    <% end %>


<% if place.comments.present? %>
<div class="col-xs-12">
  <blockquote>
    <% if place.comments.first.humanized_rating.present? %>
      <b><%= place.comments.first.humanized_rating %></b> -
    <% end %>
    <%= place.comments.first.message %>
    <small><%= place.comments.first.user.email %></small>
  </blockquote>
</div>
<% end %>

  </div>

<% end %>
